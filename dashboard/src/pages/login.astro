---
import Base from '../layouts/Base.astro';
import { getIsConnected, getQrCodeData } from '../lib/server';

const isConnected = getIsConnected();
const qrCodeData = getQrCodeData();
---

<Base title="Login" connected={isConnected}>
  <div class="flex justify-center">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-8 max-w-md w-full text-center">
      <h2 class="text-2xl font-semibold mb-6 dark:text-white">Connect WhatsApp</h2>

      {isConnected ? (
        <>
          <div class="bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 p-4 rounded-lg mb-6">
            <p class="text-lg font-medium">Connected!</p>
          </div>
          <a
            href="/"
            class="inline-block px-6 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors"
          >
            Go to Inbox
          </a>
        </>
      ) : qrCodeData ? (
        <>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Scan the QR code with WhatsApp to connect
          </p>
          <div class="bg-white p-4 rounded-lg inline-block mb-4">
            <img
              src={qrCodeData}
              alt="QR Code"
              class="max-w-full h-auto"
            />
          </div>
          <div>
            <a
              href="/login"
              class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
            >
              Refresh QR
            </a>
          </div>
        </>
      ) : (
        <div class="flex flex-col items-center gap-4 py-8">
          <div class="w-8 h-8 border-4 border-teal-500 border-t-transparent rounded-full animate-spin"></div>
          <p class="text-gray-600 dark:text-gray-400">Waiting for QR code...</p>
          <a href="/login" class="text-teal-600 hover:underline text-sm">Refresh page</a>
        </div>
      )}
    </div>
  </div>
</Base>

<script>
  // Auto-refresh page every 5 seconds if not connected
  const connected = document.querySelector('.bg-green-100');
  if (!connected) {
    setTimeout(() => window.location.reload(), 5000);
  }
</script>
